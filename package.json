{
  "name": "claude-dr-xiong",
  "displayName": "Dr-XIONG Claude",
  "description": "Dr-XIONG Claude for VSCode. Bring the power of Claude AI assistant directly into your coding environment. Now with GLM-powered image recognition!",
  "version": "0.8.56",
  "publisher": "drxiong",
  "engines": {
    "vscode": "^1.98.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "icon": "resources/claude-logo.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.cjs",
  "contributes": {
    "configuration": {
      "title": "Dr-XIONG Claude",
      "properties": {
        "xiong.apiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "API Key。用于 Claude、XiongGPT、GLM 等所有 API 调用。**推荐在 settings.json 中配置**",
          "scope": "application",
          "order": 1
        },
        "xiong.baseUrl": {
          "type": "string",
          "default": "",
          "markdownDescription": "API 代理地址。用于 Claude、XiongGPT、GLM。留空使用官方 Claude API",
          "scope": "application",
          "order": 2
        },
        "xiong.selectedModel": {
          "type": "string",
          "default": "claude-opus-4-5-20251101",
          "markdownDescription": "选择使用的 AI 模型",
          "scope": "application",
          "order": 3
        },
        "xiong.claudeCliPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Claude Code CLI 可执行文件路径（可选，手动指定更稳定）",
          "scope": "application",
          "order": 4
        },
        "xiong.glmModel": {
          "type": "string",
          "default": "glm-4.6v-flashx",
          "markdownDescription": "GLM 图片识别模型",
          "scope": "application",
          "order": 10
        },
        "xiong.enableImagePreprocessing": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "启用图片预处理（使用 GLM 识别图片后再发送给 Claude）",
          "scope": "application",
          "order": 11
        },
        "xiong.requestTimeout": {
          "type": "number",
          "default": 60,
          "minimum": 30,
          "maximum": 600,
          "markdownDescription": "API 请求超时时间（秒）。默认 60 秒，范围 30-600 秒",
          "scope": "application",
          "order": 12
        },
        "xiong.proxyUrl": {
          "type": "string",
          "default": "",
          "markdownDescription": "网络代理地址。支持 HTTP/HTTPS/SOCKS5 代理，如 `http://127.0.0.1:7890` 或 `socks5://127.0.0.1:1080`",
          "scope": "application",
          "order": 13
        },
        "xiong.environmentVariables": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "变量名"
              },
              "value": {
                "type": "string",
                "description": "变量值"
              }
            },
            "required": [
              "name",
              "value"
            ]
          },
          "default": [],
          "markdownDescription": "启动 Claude 时设置的环境变量",
          "scope": "application",
          "order": 20
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "xiong-chat-sidebar",
          "title": "Dr-XIONG Claude",
          "icon": "resources/claude-logo.svg"
        }
      ]
    },
    "views": {
      "xiong-chat-sidebar": [
        {
          "icon": "resources/claude-logo.svg",
          "type": "webview",
          "id": "xiong.chatView",
          "name": "Dr-XIONG Claude"
        }
      ]
    },
    "commands": [
      {
        "command": "xiong.showChat",
        "title": "Show Dr-XIONG Claude"
      },
      {
        "command": "xiong.openChatInEditor",
        "title": "Dr-XIONG Claude: Open Chat in Editor"
      },
      {
        "command": "xiong.openSettings",
        "title": "Dr-XIONG Claude: Open Settings"
      },
      {
        "command": "xiong.diagnoseApiKeyStorage",
        "title": "Dr-XIONG Claude: 诊断 API Key 存储"
      }
    ]
  },
  "scripts": {
    "dev": "concurrently \"pnpm run dev:webview\" \"pnpm run watch:extension\"",
    "dev:webview": "vite --config src/webview/vite.config.ts --port 5173 --strictPort",
    "build:extension": "tsx esbuild.ts --production",
    "build:webview": "vite build --config src/webview/vite.config.ts",
    "build": "pnpm run build:webview && pnpm run build:extension",
    "watch:extension": "tsx esbuild.ts --watch",
    "watch:webview": "vite build --config src/webview/vite.config.ts --watch",
    "watch": "concurrently \"pnpm run watch:extension\" \"pnpm run watch:webview\"",
    "test": "vitest --run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "typecheck:webview": "vue-tsc -p src/webview/tsconfig.json --noEmit",
    "typecheck:all": "pnpm run typecheck && pnpm run typecheck:webview",
    "prepackage": "pnpm run build && cp README.md README.md.bak && sed -i '' 's|https://awesome.re/mentioned-badge.svg|assets/mentioned-badge.png|g' README.md",
    "package": "vsce package --no-dependencies",
    "postpackage": "mv README.md.bak README.md",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,vue}\" && eslint src --ext ts,tsx,vue --fix"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vscode/vsce": "^3.7.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "vite": "^7.2.7",
    "vite-plugin-svg-icons": "^2.0.1",
    "vitest": "^4.0.15",
    "vue-tsc": "^3.1.7"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.4",
    "@anthropic-ai/sdk": "^0.71.2",
    "@gn8/alien-signals-vue": "^0.1.1",
    "@mdi/font": "^7.4.47",
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@vscode/codicons": "^0.0.43",
    "@vueuse/core": "^14.1.0",
    "alien-signals": "^3.1.1",
    "dompurify": "^3.3.1",
    "fuse.js": "^7.1.0",
    "lexical": "^0.38.2",
    "lexical-vue": "^0.14.1",
    "marked": "^17.0.1",
    "motion-v": "^1.7.4",
    "openai": "^6.16.0",
    "path-browserify-esm": "^1.0.6",
    "pinia": "^3.0.4",
    "vue": "^3.5.25",
    "zod": "^3.25.76"
  },
  "keywords": [
    "vscode",
    "extension",
    "claude",
    "ai",
    "coding-assistant"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Haleclipse/dr-xiong-claude"
  },
  "license": "AGPL-3.0"
}
